{
	"extends": ["../../packages/angular/.eslintrc.json"],
	"ignorePatterns": ["!**/*"],
	"overrides": [
		{
			"extends": [
				"plugin:@nx/angular",
				"plugin:@angular-eslint/template/process-inline-templates"
			],
			"files": ["*.ts"],
			"parserOptions": {
				"project": ["./libs/front/tsconfig.*?.json"]
			},
			"rules": {
				"@angular-eslint/component-selector": [
					"error",
					{
						"prefix": "front",
						"style": "kebab-case",
						"type": "element"
					}
				],
				"@angular-eslint/directive-selector": [
					"error",
					{
						"prefix": "front",
						"style": "camelCase",
						"type": "attribute"
					}
				]
			}
		}
	]
}
