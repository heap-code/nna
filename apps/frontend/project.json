{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"name": "frontend",
	"prefix": "heap-code",
	"projectType": "application",
	"sourceRoot": "apps/frontend/src",
	"tags": ["scope:frontend"],
	"targets": {
		"build": {
			"configurations": {
				"development": {
					"extractLicenses": false,
					"optimization": false,
					"sourceMap": true
				},
				"e2e": {
					"sourceMap": true
				},
				"production": {
					"budgets": [
						{
							"maximumError": "1mb",
							"maximumWarning": "500kb",
							"type": "initial"
						},
						{
							"maximumError": "4kb",
							"maximumWarning": "2kb",
							"type": "anyComponentStyle"
						}
					],
					"outputHashing": "all"
				}
			},
			"defaultConfiguration": "production",
			"executor": "@angular-devkit/build-angular:application",
			"options": {
				"assets": [
					"{projectRoot}/src/favicon.ico",
					"{projectRoot}/src/assets"
				],
				"browser": "{projectRoot}/src/main.ts",
				"index": "{projectRoot}/src/index.html",
				"inlineStyleLanguage": "scss",
				"outputPath": "dist/{projectRoot}",
				"polyfills": ["zone.js"],
				"prerender": true,
				"scripts": [],
				"server": "{projectRoot}/src/main.server.ts",
				"ssr": {
					"entry": "{projectRoot}/server.ts"
				},
				"styles": ["{projectRoot}/src/styles.scss"],
				"tsConfig": "{projectRoot}/tsconfig.app.json"
			},
			"outputs": ["{options.outputPath}"]
		},
		"compodoc": {
			"configurations": {
				"coverage": {
					// FIXME: increase
					"coverageTest": 25
				}
			},
			"options": {
				"disableRoutesGraph": false,
				"port": 4080,
				"tsConfig": "{projectRoot}/tsconfig.app.json"
			}
		},
		"docker-build": {
			"command": "docker build -f {projectRoot}/Dockerfile . -t frontend",
			"dependsOn": ["build"]
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		},
		"serve": {
			"configurations": {
				"development": {
					"buildTarget": "frontend:build:development",
					"proxyConfig": "{projectRoot}/proxy.conf.json"
				},
				"e2e": {
					"buildTarget": "frontend:build:e2e",
					"port": 34200
				},
				"production": {
					"buildTarget": "frontend:build:production"
				}
			},
			"defaultConfiguration": "development",
			"executor": "@angular-devkit/build-angular:dev-server",
			"options": {
				"port": 4200
			}
		},
		"serve-static": {
			"configurations": {
				"e2e": {
					"buildTarget": "frontend:build:e2e",
					"port": 34200
				}
			},
			"executor": "@nx/web:file-server",
			"options": {
				"buildTarget": "frontend:build",
				"port": 4200,
				"staticFilePath": "dist/{projectRoot}/browser"
			}
		},
		"storybook": {
			"configurations": {
				"ci": {
					"quiet": true
				}
			},
			"executor": "@storybook/angular:start-storybook",
			"options": {
				"browserTarget": "frontend:storybook-build",
				"compodoc": false,
				"configDir": "{projectRoot}/.storybook",
				"port": 4400
			}
		},
		"storybook-build": {
			"configurations": {
				"ci": {
					"quiet": true
				}
			},
			"executor": "@storybook/angular:build-storybook",
			"options": {
				"browserTarget": "frontend:storybook-build",
				"compodoc": false,
				"configDir": "{projectRoot}/.storybook",
				"outputDir": "dist/storybook/{projectRoot}"
			},
			"outputs": ["{options.outputDir}"]
		},
		"storybook-test": {
			"executor": "nx:run-commands",
			"options": {
				"command": "test-storybook -c {projectRoot}/.storybook --url=http://localhost:4400"
			}
		},
		"stylelint": {
			"executor": "nx-stylelint:lint",
			"options": {
				"lintFilePatterns": ["{projectRoot}/**/*.{css,scss}"]
			},
			"outputs": ["{options.outputFile}"]
		},
		"test": {
			"executor": "@nx/jest:jest",
			"options": {
				"jestConfig": "{projectRoot}/jest.config.ts"
			},
			"outputs": ["{workspaceRoot}/dist/coverage/{projectRoot}"]
		}
	}
}
