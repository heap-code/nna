{
	"extends": ["../../libs/front/.eslintrc.json"],
	"ignorePatterns": ["!**/*"],
	"overrides": [
		{
			"extends": [
				"plugin:@nx/angular",
				"plugin:@angular-eslint/template/process-inline-templates"
			],
			"files": ["*.ts"],
			"parserOptions": {
				"project": ["./apps/office/tsconfig.*?.json"]
			},
			"rules": {
				"@angular-eslint/component-selector": [
					"error",
					{
						"prefix": "office",
						"style": "kebab-case",
						"type": "element"
					}
				],
				"@angular-eslint/directive-selector": [
					"error",
					{
						"prefix": "office",
						"style": "camelCase",
						"type": "attribute"
					}
				]
			}
		},
		{
			"files": ["./src/main.server.ts"],
			"rules": {
				"import/no-default-export": "off"
			}
		}
	]
}
