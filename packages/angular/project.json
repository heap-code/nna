{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"name": "angular",
	"prefix": "nna",
	"projectType": "library",
	"sourceRoot": "packages/angular/src",
	"tags": [],
	"targets": {
		"compodoc": {
			"executor": "nx:run-commands",
			"options": {
				"args": "--base='npx @compodoc/compodoc -p ./packages/angular/tsconfig.lib.json -d ./dist/compodoc/packages/angular --disablePrivate --disableInternal --disableLifeCycleHooks'",
				"command": "{args.base} -r 10002 -s"
			},
			"outputs": ["{workspaceRoot}/dist/compodoc/packages/angular"]
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"]
		},
		"stylelint": {
			"executor": "nx-stylelint:lint",
			"options": {
				"lintFilePatterns": ["packages/angular/**/*.{css,scss}"]
			},
			"outputs": ["{options.outputFile}"]
		},
		"test": {
			"executor": "@nx/jest:jest",
			"options": {
				"jestConfig": "packages/angular/jest.config.ts"
			},
			"outputs": ["{workspaceRoot}/dist/coverage/{projectRoot}"]
		},
		"typecheck": {
			"executor": "nx:run-commands",
			"options": {
				"command": "tsc --noEmit -p packages/angular/tsconfig.spec.json"
			}
		}
	}
}
