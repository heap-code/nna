{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"name": "core",
	"projectType": "library",
	"sourceRoot": "packages/core/src",
	"tags": [],
	"targets": {
		"compodoc": {
			"executor": "nx:run-commands",
			"options": {
				"args": "--base='npx @compodoc/compodoc -p ./packages/core/tsconfig.lib.json -d ./dist/compodoc/packages/core --disablePrivate --disableInternal --disableLifeCycleHooks'",
				"command": "{args.base} -r 10000 -s"
			},
			"outputs": ["{workspaceRoot}/dist/compodoc/packages/core"]
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"]
		},
		"test": {
			"executor": "@nx/jest:jest",
			"options": {
				"jestConfig": "packages/core/jest.config.ts"
			},
			"outputs": ["{workspaceRoot}/dist/coverage/{projectRoot}"]
		},
		"typecheck": {
			"executor": "nx:run-commands",
			"options": {
				"command": "tsc --noEmit -p packages/core/tsconfig.spec.json"
			}
		}
	}
}
