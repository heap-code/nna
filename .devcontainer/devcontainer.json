{
	"customizations": {
		"vscode": {
			"extensions": [
				"Angular.ng-template",
				"EditorConfig.EditorConfig",
				"GitHub.vscode-pull-request-github",
				"Gruntfuggly.todo-tree",
				"dbaeumer.vscode-eslint",
				"exiasr.hadolint",
				"firsttris.vscode-jest-runner",
				"formulahendry.auto-close-tag",
				"formulahendry.auto-rename-tag",
				"github.vscode-github-actions",
				"hediet.vscode-drawio",
				"mhutchie.git-graph",
				"ms-azuretools.vscode-docker",
				"mtxr.sqltools",
				"mtxr.sqltools-driver-pg",
				"mtxr.sqltools-driver-sqlite",
				"nrwl.angular-console",
				"redhat.vscode-yaml",
				"streetsidesoftware.code-spell-checker",
				"stylelint.vscode-stylelint",
				"vivaxy.vscode-conventional-commits",
				"waderyan.gitblame",
				"yoavbls.pretty-ts-errors"
			],
			"settings": {
				// Ensure correct node version
				"eslint.runtime": "/usr/local/bin/node",
				"sqltools.connections": [
					{
						"database": "db",
						"driver": "PostgreSQL",
						"name": "DB",
						"password": "PASSWORD",
						"port": 5432,
						"previewLimit": 50,
						"server": "db",
						"username": "user"
					}
				],
				"sqltools.useNodeRuntime": "/usr/local/bin/node"
			}
		}
	},
	"dockerComposeFile": ["../docker-compose.yml", "./docker-compose.yml"],
	"features": {
		// TODO: enable when some E2E tests will be set
		// "ghcr.io/devcontainers/features/desktop-lite:1": {}
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/dhoeric/features/hadolint:1": {}
	},
	"name": "DevContainer",
	"onCreateCommand": "npm install",
	"postCreateCommand": {
		"set npx path": "echo \"PATH=\"${PATH}:${PWD}/node_modules/.bin\"\" >> ~/.bashrc",
		"set nx parallel": "echo 'export NX_PARALLEL=$(node -e \"console.log(Math.max(2, Math.floor($(nproc) * 3/4)))\")' >> ~/.bashrc"
	},
	"postStartCommand": {
		"npm": "npm install",
		"nx": "npx nx reset"
	},
	"remoteEnv": {
		"BE_DB_HOST": "db"
	},
	"service": "devcontainer",
	"shutdownAction": "stopCompose",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
