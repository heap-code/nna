{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"lib": ["dom", "es2022"],
		"module": "esnext",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"paths": {
			"@nna/angular": ["packages/angular/src/index.ts"],
			"@nna/core": ["packages/core/src/index.ts"],
			"@nna/nest": ["packages/nest/src/index.ts"],
			"~/common/*": ["libs/common/src/*"],
			"~/front/*": ["libs/front/src/*"],
			"~/testing/seeds": ["libs/common/seeds/index.ts"]
		},
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"target": "es2021"
	},
	"exclude": ["node_modules", "tmp"]
}
