{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["es2020", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"paths": {
			"@nna/angular": ["packages/angular/src/index.ts"],
			"@nna/core": ["packages/core/src/index.ts"],
			"@nna/nest": ["packages/nest/src/index.ts"],
			"~/common": ["libs/common/src/index.ts"]
		},
		"rootDir": ".",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es2015"
	},
	"exclude": ["node_modules", "tmp"]
}
